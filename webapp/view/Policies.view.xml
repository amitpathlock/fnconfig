<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="pl.dac.apps.fnconfig.controller.Policies" displayBlock="true" height="100%" busyIndicatorDelay="0">
   <!-- @ui5ignore -->
   <Page title="" class="plDacPageHeader">
      <customHeader>
         <Toolbar design="Transparent" class="plDacToolbar">
            <core:Icon src="sap-icon://documents" />
            <Title text="{i18n>titPolicyAdministrationPointPolicies}" />
            <ToolbarSpacer />
            <!-- @ui5ignore -->
            <OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{viewModel>/FullScreen}" />
            <!-- @ui5ignore -->
            <OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{viewModel>/ExitFullScreen}" />
         </Toolbar>
      </customHeader>
      <content>
         <!-- @ui5ignore -->
         <smartFilterBar:SmartFilterBar id="smartFilterBar-Policy" entitySet="UserAttrSet" persistencyKey="SmartFilterBar_Explored" enableBasicSearch="true" />
         <!-- @ui5ignore -->
         <smartTable:SmartTable id="idSmartPolAdminTable" entitySet="PolicySet" smartFilterId="smartFilterBar-Policy" tableType="ResponsiveTable" header="{i18n>titPolAdminPolicies}" persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true" demandPopin="true" class="sapUiResponsiveContentPadding" requestAtLeastFields="Policy,PolicyDesc" placeToolbarInTable="true">
            <!-- @ui5ignore -->
            <Table mode="SingleSelectLeft" id="idTablePolAdminPolicies" selectionChange="onTableSelectionChange" sticky="ColumnHeaders,HeaderToolbar" growingScrollToLoad="true" growing="true" growingThreshold="20">
               <!-- Header -->
               <columns>
                  <Column width="70%">
                     <customData>
                        <core:CustomData key="p13nData" value="\{&quot;columnKey&quot;: &quot;PolicyName&quot;, &quot;columnIndex&quot;:&quot;1&quot;, &quot;leadingProperty&quot;: &quot;PolicyName&quot;}" />
                     </customData>
                     <Text text="Policy Name" />
                  </Column>
                  <Column hAlign="Initial">
                     <customData>
                        <core:CustomData key="p13nData" value="\{&quot;columnKey&quot;: &quot;Test&quot;, &quot;columnIndex&quot;:&quot;100&quot;}" />
                     </customData>
                     <Text />
                  </Column>
               </columns>
               <!-- Data -->
               <items>
                  <ColumnListItem>
                     <cells>
                        <ObjectHeader title="{PolicyName}" class="plDacObjectHeader plDacPolicyName">
                            <ObjectAttribute class="plDacObjectAttribute" title="Description" text="{PolicyDesc}" />
                        </ObjectHeader>
                        
                        <!-- @ui5ignore -->
                        <Link text="Rules" press=".onPressRuleLink">
                           <customData>
                              <core:CustomData value="{Policy}" />
                           </customData>
                        </Link>
                     </cells>
                  </ColumnListItem>
               </items>
            </Table>
         </smartTable:SmartTable>
      </content>
   </Page>
</mvc:View>