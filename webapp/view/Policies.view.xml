<mvc:View
	controllerName="pl.dac.apps.fnconfig.controller.Policies"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
xmlns:core="sap.ui.core"
	busyIndicatorDelay="0"
>
<!-- @ui5ignore -->
<Page title="" class="plDacPageHeader">
<customHeader>
<Toolbar design="Transparent" class="plDacToolbar">
    
        <core:Icon src="sap-icon://documents" />
        <Title text="{i18n>titPolicyAdministrationPointPolicies}"/>
        <ToolbarSpacer/>
        <!-- @ui5ignore -->
        	<OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{viewModel>/FullScreen}"/>
			<!-- @ui5ignore -->
            <OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{viewModel>/ExitFullScreen}"/>
			
    </Toolbar>
</customHeader>


 <content>
<!-- @ui5ignore -->
	 <smartFilterBar:SmartFilterBar
              id="smartFilterBar-Policy"
               entitySet="UserAttrSet"
                persistencyKey="SmartFilterBar_Explored"
                enableBasicSearch="true"
               
               
            />
            <!-- @ui5ignore -->
            <smartTable:SmartTable
               id="idSmartTablePolicies"
                entitySet="PolicySet"
                smartFilterId="smartFilterBar-Policy"
                tableType="ResponsiveTable"
              
                header="Policies"
               
                persistencyKey="SmartTableAnalytical_Explored"
                enableAutoBinding="true"
                demandPopin="true"
                class="sapUiResponsiveContentPadding"
              requestAtLeastFields="Policy,PolicyDesc"
            >
            <smartTable:customToolbar>
			<OverflowToolbar design="Transparent">
				<ToolbarSpacer/>
                <!-- @ui5ignore -->
                <OverflowToolbarButton icon="sap-icon://add" tooltip="Add Data Attributes" text="Add" press="onAddBtnPress"/>
				 <!-- @ui5ignore -->
                <OverflowToolbarButton icon="sap-icon://edit" tooltip="Edit Data Attributes" enabled="{viewModel>/EditButtonEnabled}" press="onEditBtnPress"/>
                 <!-- @ui5ignore -->
                <OverflowToolbarButton icon="sap-icon://delete" tooltip="Delete Data Attributes" enabled="{viewModel>/DeleteButtonEnabled}" press="onDeleteBtnPress"/>
				 <!-- @ui5ignore -->
                <OverflowToolbarButton icon="sap-icon://sort" tooltip="Sort" text="Sort" press="onSort"/>
				
			</OverflowToolbar>
		</smartTable:customToolbar>
         <!-- @ui5ignore -->
                <Table mode="SingleSelectLeft" id="idTablePolicies"
                    alternateRowColors="true"
                    sticky="ColumnHeaders,HeaderToolbar"
                    selectionChange="onTableSelectionChange"
                    growing="true"
                    growingThreshold="10"
                >
              
                    <!-- Header -->
                    <columns >
                       
                        <Column  hAlign="Begin">
                        <customData>
									<core:CustomData key="p13nData" value='\{"columnKey": "PolicyName", "columnIndex":"1", "leadingProperty": "PolicyName"}'/>
								</customData>
                            <Text text="Policy Name" />
                        </Column>
                        <Column hAlign="Initial" >
                        <customData>
									<core:CustomData key="p13nData" value='\{"columnKey": "PolicyDesc", "columnIndex":"2", "leadingProperty": "PolicyDesc"}'/>
								</customData>
                            <Text text="Description" />
                        </Column>
                        <Column hAlign="Initial">
                            <customData>
									<core:CustomData key="p13nData" value='\{"columnKey": "Test", "columnIndex":"100"}'/>
								</customData>
                          <Text  />
                          
                       </Column>
                    </columns>
                    <!-- Data -->
                    <items>
                        <ColumnListItem
 
                        >
                           <cells>
									<ObjectIdentifier title="{PolicyName}"/>
									<Text text="{PolicyDesc}"/>
                                    <!-- @ui5ignore -->
									 <Link text="Rules" press=".onPressRuleLink" >
                                        <customData>
									<core:CustomData  value='{Policy}'/>
								</customData>
                                     </Link>
								</cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </smartTable:SmartTable>
 </content>
</Page>
</mvc:View>