<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <!-- @ui5ignore -->
	<Popover
		id="myPopover"
		showHeader="false"
		contentWidth="480px"
		contentHeight="500px"
		placement="Auto"
		ariaLabelledBy="master-title">
        <!-- @ui5ignore -->
		<NavContainer
			id="navCon">
            <!-- @ui5ignore -->
			<Page
				id="master"
				class="sapUiResponsivePadding--header"
				>
               <customHeader>
                <Toolbar >
                    <core:Icon src="sap-icon://product"/>
                    <Title text="{i18n>titPageDataAttribute}"/>
                    <ToolbarSpacer ></ToolbarSpacer>
                     <!-- @ui5ignore -->
                    <Link text="{i18n>titPageUserAttribute}"   press="onPressNavToUserAttribute"/>
                </Toolbar>
               </customHeader>
                	
                <!-- @ui5ignore -->
				<List
		
					items="{/DataAttrSet}"
                    headerText="User Attributes" itemPress="onAttributeItemPress"
                                            growing="true"
                                            growingThreshold="10"
                                            growingScrollToLoad="false"
                     >
                    <!-- @ui5ignore -->
					<StandardListItem type="Active"
                                            title="{AttributeName}"
                                            description="{Description}"
                                            iconDensityAware="false"
                                            iconInset="false" />
				</List>
			</Page>
            <!-- @ui5ignore -->
			<Page
				id="detail"
				class="sapUiResponsivePadding--header"
				showNavButton="true"
				navButtonPress="onNavBack"
				>
                <customHeader>
                <Toolbar >
                 <!-- @ui5ignore -->
                    
                    <core:Icon src="sap-icon://person-placeholder"/>
                    <Title text="{i18n>titPageUserAttribute}"/>
                     <ToolbarSpacer ></ToolbarSpacer>
                      <!-- @ui5ignore -->
                      <Link text="{i18n>titPageDataAttribute}"   press="onNavBack"/>
                </Toolbar>
               </customHeader>
				<content>
                 <!-- @ui5ignore -->
                    <Table items="{path:'/UserAttrSet'}">
                        <columns>
                            <Column 	minScreenWidth="Tablet"  demandPopin="true">
                                <Text text="Name" />
                            </Column> 
                             <Column 	minScreenWidth="Tablet"  demandPopin="true">
                                <Text text="Description" />
                            </Column>     
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <ObjectIdentifier title="{AttributeName}" />
                                    <Text text="{Description}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
					
					
				</content>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>