<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
   <!-- @ui5ignore -->
   <Dialog class="PlDacDailogBox" 
   beforeOpen="onBeforePolAdminPolicyDialogOpened"
   contentWidth="600px" resizable="true" icon="{viewModel&gt;/Icon}" title="{viewModel&gt;/Title}">
      <content>
         <!-- @ui5ignore -->
         <f:SimpleForm editable="true" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" layout="ResponsiveGridLayout" singleContainerFullSize="false">
            <f:content>
               <!-- @ui5ignore -->
               <Label text="{viewModel&gt;/Name}" required="true" />
               <!-- @ui5ignore -->
               <Input id="idPolAdminPolName" enabled="{viewModel&gt;/PolicyNameEnabled}" valueState="{viewModel&gt;/PolNameErrorState}" valueStateText="{viewModel&gt;/PolNameErrorMessage}" liveChange="onInputChange" value="{viewModel&gt;/Data/PolicyName}" />
               <Label text="{viewModel&gt;/Description}" required="true" />
              <!-- @ui5ignore -->
               <Input id="idPolAdminPolDesc" value="{viewModel&gt;/Data/PolicyDesc}" valueState="{viewModel&gt;/PolDescErrorState}" valueStateText="{viewModel&gt;/PolDescErrorMessage}" />
               <!-- Add more form fields as needed -->
            </f:content>
         </f:SimpleForm>
      </content>
      <beginButton>
         <!-- @ui5ignore -->
         <Button text="Save" press="onSavePolAdminPolicy" />
      </beginButton>
      <endButton>
         <!-- @ui5ignore -->
         <Button text="Cancel" press="onCloseDialog" />
      </endButton>
   </Dialog>
</core:FragmentDefinition>