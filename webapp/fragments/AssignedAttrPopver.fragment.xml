<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f">
 <!-- @ui5ignore -->
   <Popover showHeader="false"
   afterClose="onAfterCloseAssignedAttributePopOver"
    class="PlDacPopover" placement="Auto" resizable="true" contentHeight="280px" contentWidth="430px">
      <content>
         <f:DynamicPage class="sapUiNoContentPadding">
            <f:content>
             <!-- @ui5ignore -->
               <Table id="idAssignedAttribures" items="{    path: 'popOverModel>/items'   }" noDataText="No data found"> 
                  <columns>
                     <Column>
                        <Text text="Attribute Name" />
                     </Column>
                     <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Description" />
                     </Column>
                  </columns>
                  <ColumnListItem>
                     <cells>
                        <Text text="{popOverModel>AttributeId}" />
                        <Text text="{popOverModel>Description}" />
                     </cells>
                  </ColumnListItem>
               </Table>
            </f:content>
            <f:title>
               <f:DynamicPageTitle class="plDacDynamicPageTitle">
                  <f:heading>
                     <HBox alignItems="Center">
                        <core:Icon src="sap-icon://fx" class="sapUiTinyMarginEnd" />
                        <Title text="{popOverModel>/PolicyName}" level="H2" />
                     </HBox>
                  </f:heading>
                  <f:expandedContent>
                     <Label  text="{popOverModel>/PolicyDesc}" />
                  </f:expandedContent>
                  <f:snappedContent>
                     <Label  text="{popOverModel>/PolicyDesc}" />
                  </f:snappedContent>
               </f:DynamicPageTitle>
            </f:title>
         </f:DynamicPage>
      </content>
   </Popover>
</core:FragmentDefinition>