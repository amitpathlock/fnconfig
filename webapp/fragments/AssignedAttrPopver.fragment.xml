<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover showHeader="false" class="PlDacPopover"
    placement="Auto" resizable="true" contentHeight="280px" contentWidth="430px"
		>
       
		<Page showHeader="true" >
            <customHeader>
            <Toolbar >
                <content>
                    <core:Icon src="sap-icon://fx"></core:Icon>
                    <Title text="{popOverModel>/PolicyName}"></Title>
                    <ToolbarSeparator />
                </content>
            </Toolbar>
            </customHeader>
        
        
         <content>
             <Table id="idProductsTable"
		inset="false"
		items="{
			path: 'popOverModel>/items'
		}">
        	<columns>
			<Column
				>
				<Text text="Attribute Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Description" />
			</Column>
            </columns>
            <ColumnListItem>
				<cells>
					
					<Text
						text="{popOverModel>AttributeId}" />
					<Text  text="{popOverModel>Description}" />

                </cells>
             </ColumnListItem>
        </Table>
         </content>
           
        </Page>
        
        

	</Popover>
</core:FragmentDefinition>
