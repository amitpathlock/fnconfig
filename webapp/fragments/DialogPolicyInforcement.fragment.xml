    
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
     <!-- @ui5ignore -->
    <Dialog
            icon="{viewModel>/Icon}"
            contentWidth="600px"
            class="PlDacDailogBox"
            beforeClose="onBeforePEPDialogClosed"
            beforeOpen="onBeforePEPDialogOpened"
           
            title="{viewModel>/Title}">
           
        <content>
            <!-- @ui5ignore -->
            <f:SimpleForm
                    editable="true"
                  labelSpanXL="12"
			labelSpanL="12"
			labelSpanM="12"
			labelSpanS="12"
                    layout="ResponsiveGridLayout"
                   >
                <f:content>
                    <!-- @ui5ignore -->
                    <Label text="{viewModel>/Name}"  required="true"/>
                    <!-- @ui5ignore -->
                    <MultiInput enabled="{viewModel>/PolicyNameEnabled}"  id="idPEPPolicyName"
                        showSuggestion="true"
                        showValueHelp="true"
                       tokenChange="onPEPPolicyTokenUpdated"
                        valueHelpRequest=".onValueHelpRequested"
                        valueState="{viewModel>/ErrorState}"
                        valueStateText="{viewModel>/ErrorMessage}"
                        suggestionItemSelected="onSuggestionItemSelected"
                        	suggestionRows="{
                                path: '/PolicySet',
                                length: 1000
                            }" 
                        liveChange="onPolicyNameInputChange"  >
                        <suggestionColumns>
                            <Column>
                                <Label text="Policy Name"/>
                            </Column>
                            <Column>
                                <Label text="Description"/>
                            </Column>
                        </suggestionColumns>
                        <suggestionRows>
                            <!-- @ui5ignore -->
                            <ColumnListItem >
                                <Label text="{PolicyName}" />
                                <Label text="{PolicyDesc}" />
                            </ColumnListItem>
                        </suggestionRows>
                    </MultiInput>
                    <!-- @ui5ignore -->
                    <!-- <ObjectStatus title="Policy DESC" text="{viewModel>/Data/PolicyDesc}"  id="idPEPPolicyDescription" /> -->
                    <!-- @ui5ignore -->
                    <!-- <Input  id="idPolicyDescription" value="{viewModel>/Data/PolicyDesc}" enabled="false"/> -->
                    <Label text="{viewModel>/Attribute}" class="plDacLabelMarginTop" required="true" visible="{viewModel>/VisibleAttribute}" />
                    <!-- @ui5ignore -->
                    <MultiInput  id="idPEPAttributes"  visible="{viewModel>/VisibleAttribute}"
                        showSuggestion="true"
                        enabled="{viewModel>/AttributeNameEnabled}"
                        showValueHelp="true"  width="100%"
                       tokenChange="onPEPAttributeTokenUpdated"
                         valueState="{viewModel>/AttrErrorState}"
                        valueStateText="{viewModel>/AttrErrorMessage}"
                        valueHelpRequest=".onPEPAttributeVHRequested" 
                         liveChange="onPEPAttributeNameInputChange"
                            suggestionItemSelected="onPEPAttributeSuggestionItemSelected"
                        	suggestionRows="{
                                path: '/AttrSet',
                                length: 1000
                            }" 
                    >
                        <suggestionColumns>
                            <Column>
                                <Label text="Name"/>
                            </Column>
                            <Column>
                                <Label text="Description"/>
                            </Column>
                        </suggestionColumns>
                        <suggestionRows>
                            <!-- @ui5ignore -->
                            <ColumnListItem >
                                <Label text="{AttributeId}" />
                                <Label text="{Description}" />
                            </ColumnListItem>
                        </suggestionRows>
                    </MultiInput>
                     <!-- @ui5ignore -->
                   
                    <Label text="{viewModel>/Action}" required="true" class="plDacLabelMarginTop"/>
                      <!-- @ui5ignore -->
                    <Select 	selectedKey="{viewModel>/Data/PolicyResult}" id="idPEPActionResult"
                     valueState="{viewModel>/ActionErrorState}"
                        valueStateText="{viewModel>/ActionErrorMessage}"
                    >
                        <items>
                            <core:Item key="" text="" />
                            <core:Item key="A" text="ALLOW" />
                            <core:Item key="D" text="DENY" />
                        </items>
                    </Select>
                    <HBox class="plDacHBoxMarginTop"
                    >
                        <Label text="{i18n>lblStatus}"  class="plDacLabelMarginTop" />
                        <!-- @ui5ignore -->
                        <Switch
                            type="AcceptReject"
                            enabled="true"
                            state="{viewModel>/Data/IsActive}"
                            class="sapUiSmallMarginBegin"
                        />
                    </HBox>
                     
                    
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <!-- @ui5ignore -->
            <Button text="Save" press="onSavePolicyInforcement" />
        </beginButton>
        <endButton>
            <!-- @ui5ignore -->
            <Button text="Cancel" press="onCloseDialogPolicyInforcement" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>